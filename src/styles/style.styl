@font-face
  font-family HelveticaNeueUltraLight
  src url(../fonts/HelveticaNeue-UltraLight.otf)

@font-face
  font-family HelveticaNeueLight
  src url(../fonts/HelveticaNeue-Light.otf)

//sexy colors
aqua    = #7FDBFF
blue    = #0074D9
navy    = #001F3F
teal    = #39CCCC
green   = #2ECC40
olive   = #3D9970
lime    = #01FF70
yellow  = #FFDC00
orange  = #FF851B
red     = #FF4136
fuchsia = #F012BE
purple  = #B10DC9
maroon  = #85144B
white   = #ffffff
silver  = #dddddd
gray    = #aaaaaa
black   = #111111

body
  font-family HelveticaNeueUltraLight

ul
  list-style none

a
  text-decoration none
  font-size 200%

a:link
  color black
a:visited
  color black
a:hover
  color red
a:active
  color black

label
  font-size 200%

form span
  font-size 200%

h1, h2, h3, h4
  font-size 200%

video
  width 35%
  margin 15px
  float left

button
  font-family HelveticaNeueUltraLight
  font-size 200%
  background none
  border none

form button
  border 1px solid silver

form button:hover
  box-shadow inset 0 0 5px #000000

input[type=text]
  border 1px solid silver
  font-family HelveticaNeueUltraLight
  font-size 200%
  margin 10px

input
  outline none


input.error
  box-shadow 0 0 5px red
  color black

.cont
  width 560px
  padding-left 117px
  margin auto

.center
  text-align center

.error
  color red
  display inline-block

.logo
   font-size 500%

local-video
  perspective 800
  position fixed
  top 100px
  right 50px

local-video:hover .flipper, local-video.hover .flipper
  transform: rotateY(180deg)

.flipper
  transition 1.0s
  transform-style preserve-3d
  position relative

local-video, .front, .back
  width 200px
  height 150px

.front, .back
  backface-visibility hidden
  position absolute
  top 0
  left 0
  margin 0

.back
  transform rotateY(180deg)
  background silver

.front
  transform rotateY(0deg)

/*---------------------angular animations---------------------*/

.ng-enter
  transition 0.5s linear all

.ng-enter, .ng-leave.ng-leave-active
  opacity 0

.ng-leave, .ng-enter.ng-enter-active
  opacity 1
